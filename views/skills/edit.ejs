<%- include('../partials/html-heading.ejs')%>

<body>

    <form action="/skills/<%= skill.id %>?_method=PUT" method="POST" autocomplete="off">
        <div class="form-group">
            <label for="newSkillFrom">Skill:</label>
            <input type="text" name="skill" class="form-control" id="newSkillFrom" value="<%= skill.skill %>">
        </div>
        <div class="form-group">
            <label for="learnedAtForm">Learned At:</label>
            <input type="text" name="learnedAt" class="form-control" id="learnedAtForm" value="<%= skill.learnedAt %>">
        </div>
        <div class="form-group">
            <label for="furtherInfoForm">Further Info:</label>
            <input type="text" name="furtherInfo" class="form-control" id="furtherInfoForm" value="<%= skill.furtherInfo %>">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</body>
</html>